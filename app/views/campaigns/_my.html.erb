<div class="row">
	<div class="small-1 columns"></div>
	<div class="small-5 column">
		<h3>My Live Campaigns:</h3>
	</div>
	<div class="small-6 column">
		<h3>My Finished Campaigns:	</h3>
	</div>
</div>
<br>
<br>
<div class="row">
	<div class="small-1 columns"></div>
	<div class="small-5 column">
		<% @campaigns.each do |c| %>
			<% if c.status == "Live" %>
				<ul>
					<li>
						<h5><%= c.title %>		</h5>
					</li>
					<li>
						<h5>$<%= c.price %>		</h5>
					</li>
					<li>
						<h5><%= link_to 'View', campaign_path(c.id) %>		</h5>
					</li>
				</ul>
				<br>
			<% end %>						
		<% end %>
	</div>
	<div class="small-6 column">
		<% @campaigns.each do |c| %>
			<% if c.status == "Finished" %>	
				<ul>
					<li>
						<h5><%= c.title %></h5>
					</li>
					<li>
						<h5>$<%= c.price %></h5>
					</li>
					<li>
						<h5><%= link_to 'View', campaign_path(c.id) %></h5>
					</li>
				</ul>
			<% end %>				
		<% end %>
	</div>
</div>	
	
