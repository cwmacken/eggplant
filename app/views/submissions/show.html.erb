<div class="row">
	<div class="small-12 columns">
		<% if @user.submissions.include?(@submission) %>
			<h3>Campaign Title:</h3>
			<%= @submission.campaign.title %>
			<h3>Submission Title:</h3>
			<%= @submission.title %>
			<h3>Submission Content:</h3>
			<%= @submission.content %>
			
			<h4><%= link_to 'Edit', edit_submission_path%></h4>
			<%= button_to "Delete", {action:"destroy", id:@submission},
	      {method: :delete} %>
	  <% end %>
	</div>
</div>
<h4><%= link_to 'Back', submissions_path%></h4>